<!-- Encabezado de la página -->
<header class="container-fluid container-header">
    <!-- Columna 1 vacía -->
    <div class="col col-1"></div>
    <!-- Columna 2 con el logo y el nombre del sitio -->
    <div class="col col-5 d-flex align-items-center">
        <!-- Contenedor para el logo -->
        <div class="mb-1">
            <!-- Imagen del logo -->
            <img src="../images/logo.png" class="img" alt="Imagen">
        </div>
        <!-- Enlace al inicio con el nombre del sitio como botón -->
        <a href="/" class="btn text-dark border-0">
            <!-- Título del sitio -->
            <h2 class="fst-italic"><strong>EpicScape</strong></h2>
        </a>
    </div>
    <!-- Columna 3 con el formulario de búsqueda -->
    <div class="col col-5" style="margin-right: 10px;"> <!-- Ajusta el valor del margen según tus necesidades -->
        <!-- Formulario de búsqueda -->
        <form action="/buscar" method="get">
            <!-- Contenedor para la caja de búsqueda y el botón de búsqueda -->
            <div class="buscador">
                <!-- Caja de búsqueda -->
                <input id="busquedaGlobal" type="search" class="caja" placeholder="Próximo destino..." name="nombreBuscar" required>
                <!-- Botón de búsqueda -->
                <button class="boton" type="submit"><i class="bi bi-search"></i></button>
            </div>
        </form>
    </div>
    <div class="col col-1">
        <div class="mb-1">
            <% if (!session || !session.username) { %>
                <!-- Usuario no autenticado: muestra el botón de login --> 
                <a href="/login" class="btn text-dark border-0">
                    <img src="https://cdn-icons-png.flaticon.com/512/17/17004.png" alt="Iniciado" style="width: 50px; height: 50px;">
                </a>
            <% } else { %>
                <!-- Usuario autenticado: muestra otro ícono o lo que desees -->
                <a href="/perfil" class="btn">
                    <img src="https://cdn-icons-png.flaticon.com/512/5987/5987424.png" alt="Iniciado" style="width: 50px; height: 50px;">
                </a>
            <% } %>
        </div>
    </div>    
</header>

