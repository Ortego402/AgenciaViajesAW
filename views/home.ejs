<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="stylesheet" type="text/css" href="../css/home.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
    <title>EpicScape-Inicio</title>
    <link rel="icon" href="../images/logo.png" type="image/x-icon">
</head>
<body>
  <header class="container-fluid container-header">
    <div class="col col-4 d-flex justify-content-center align-items-center">
        <a href="/" class="btn btn-block text-dark border-0">
        <h2><strong>EpicScape</strong></h2>
      </a>
    </div>
    <div class="col col-4">
      <form action="/buscar" method="get">
        <div class="buscador">
          <input id="busquedaGlobal" type="search" class="caja" placeholder="Próximo destino..." name="nombreBuscar" required>
          <button class="boton" type="submit"><i class="bi bi-search"></i></button>
        </div>
      </form>
    </div>
    <div class="col col-2 d-flex justify-content-center align-items-center">
        <img src="../images/logo.png" class="img" alt="Imagen sustitutiva de login">
    </div>
    <div class="col col-2 d-flex justify-content-center align-items-center">
      <a href="../registro"><button class="botonperfil"><i class="bi bi-person-circle"></i></button></a>
    </div>  
</header>

<nav class="navbar">
  <a href="/nosotros" class="botonnav">Nosotros</a>
  <a href="/servicios" class="botonnav">Servicios</a>
  <a href="/contacto" class="botonnav">Contacto</a>
</nav>

    <main>
      <div class="destinos-grid">
        <% results.forEach(function(destino, index) { %>
          <a href="/destino/<%= destino.id %>" class="decoration">
            <div class="card">
              <!-- Mostrar la imagen del destino -->
              <img src="<%= destino.imagen %>" class="card-img-top" alt="<%= destino.nombre %>">
          
              <div class="card-body">
                <div class ="card-top">
                  <p class="card-title"><strong><%= destino.nombre %></strong></p>
                  <h6 class="card-price"><strong><%= destino.precio %>€</strong></h6>
                </div>
              </div>
            </div>
          </a>
        <% }); %>
      </div>
    </main>
</body>
<footer>
  <div class="container">
      <div class="row justify-content-center align-items-center">
          <div class="col-md-4">
              <h3>Contacto</h3>
              <div class="d-flex flex-column align-items-center">
                  <p>Dirección: 123 Calle Principal, Ciudad, País</p>
                  <p>Teléfono: +123 456 789</p>
                  <p>Email: info@agenciadeviajes.com</p>
              </div>
          </div>
          <div class="col-md-4 mb-3">
              <h3>Síguenos en Redes Sociales</h3>
              <div class="social-links d-flex flex-column">
                  <a href="https://www.facebook.com/?locale=es_ES">Facebook</a>
                  <a href="https://twitter.com/?lang=es">Twitter</a>
                  <a href="https://www.instagram.com/">Instagram</a>
              </div>
          </div>
          <div class="col-md-4 mt-4">
              <p>&copy; 2023 Agencia de Viajes. Todos los derechos reservados.</p>
          </div>
      </div>
  </div>
</footer>
</html>
